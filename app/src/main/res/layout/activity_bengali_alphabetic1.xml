                        android:onClick="onClick_b"
                        android:src="@drawable/da" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/dha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick_b"
                        android:src="@drawable/dha" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/nio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onClick_b"
