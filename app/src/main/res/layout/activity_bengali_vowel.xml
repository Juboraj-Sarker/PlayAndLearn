<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bengali_vowel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/for_all"
    tools:context="juborajsarker.playandlearn.bengali_activity.BengaliVowelActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ojogor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ojogor"
                    android:onClick="onClick_v" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/aam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/aam"
                    android:onClick="onClick_v"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/idur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/idur"
                    android:onClick="onClick_v"/>

            </LinearLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/eid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/eid"
                    android:onClick="onClick_v"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ut"
                    android:onClick="onClick_v"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/usha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/usha"
                    android:onClick="onClick_v"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/rishi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rishi"
                    android:onClick="onClick_v"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ektara"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ektara"
                    android:onClick="onClick_v"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/oirabot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/oirabot"
                    android:onClick="onClick_v"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/okay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/okay"
                    android:onClick="onClick_v"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/oshud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/oshud"
                    android:onClick="onClick_v"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


            </LinearLayout>




        </LinearLayout>




        <com.google.android.gms.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_home_footer_2">
        </com.google.android.gms.ads.AdView>



    </LinearLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/home_btn"
            android:layout_marginTop="5dp"
            android:onClick="home_from_vowel"
            android:layout_centerInParent="true"/>




    </RelativeLayout>

</LinearLayout>
